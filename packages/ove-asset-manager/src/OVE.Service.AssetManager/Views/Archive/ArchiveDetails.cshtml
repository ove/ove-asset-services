@model OVE.Service.AssetManager.Models.OVEAssetModel
@using Newtonsoft.Json
@using OVE.Service.AssetManager.Domain
@inject ServiceRepository Services
@inject IAssetFileOperations fileServices

@{
    ViewData["Title"] = "Archive Details";

    List<string> files = new List<string>();
    string baseUrl = "./";
    try {
        files = JsonConvert.DeserializeObject<List<string>>(Model.AssetMeta);
        baseUrl = fileServices.ResolveFileUrl(Model);
    } catch(Exception) {}

}

<h2>Details</h2>

<div>
    <h4>Archive Details</h4>
    <hr />
        <ol>
            @foreach (var file in files){
               var url = baseUrl.Replace(Model.StorageLocation,file); 
               <li>
                   <a href="@url">@file</a>
               </li>
            }
        </ol>>
</div>